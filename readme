app.js
app.locals.posts = require('./posts.data');

(or index.js)
var jsonData =  require('../posts.data');

res.render('index',{
  title:'Express',
  posts:jsonData
});




index.ejs
<body>
  <% header.ejs%>
  <h3><%= posts.categoryName %></h3>
  
  <ul>
    <% posts.categories.forEach(function(item){ %>
      <li><%= item.title %></li>
      <li><%= item.url %></li>
      <li><%= item.date %></li>
     <% });%>
  </ul>
  
